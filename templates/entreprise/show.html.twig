{% extends 'base.html.twig' %}

{% block title %}Détail d'une entreprise{% endblock %}

{% block body %}
    <h1>Détail d'une entreprise</h1>

    <h2>{{ entreprise }}</h2>
    <p>
        {# Adresse : {{ entreprise.adresse }} {{entreprise.cp}} {{entreprise.ville}} #}
        <u>Adresse</u> : {{ entreprise.adresseComplete }}<br>
        
        {# Date de création : {{ entreprise.dateCreaFR }} #}

        {# gestion de la date par TWIG avec un filtre "|" #}
        <u>Date de création</u> : {{ entreprise.dateCrea | date("d/m/Y") }}
    </p>

    <h3>Liste des employés</h3>
    {% if entreprise.employes | length > 0 %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Employés</th>
                </tr>
            </thead>
            <tbody>

        {% for employe in entreprise.employes %}
            <tr><td><a href="{{ path('show_employe', {'id': employe.id}) }}">{{ employe }}</a></td></tr>
        {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun employé</p>
    {% endif %}
    {% endblock %}
    