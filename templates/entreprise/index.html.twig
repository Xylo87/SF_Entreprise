{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises{% endblock %}

{% block body %}
    <h1>Liste des entreprises</h1>

    {# {{controller_name}} #}
    
    <a href="{{ path('new_entreprise')}}" class="btn btn-success">Ajouter une entreprise</a><br><br>

    {% for entreprise in entreprises %}
        {# {{entreprise.raisonSociale ~ ' (' ~ entreprise.cp ~ ' ' ~ entreprise.ville ~ ')'}}<br> #}
        <ul>
            <li><a href="{{ path('show_entreprise', {'id': entreprise.id})}}">{{entreprise}}</a>
            <a class="btn btn-warning" href="{{ path('edit_entreprise', {'id': entreprise.id})}}">Edit</a>
            <a class="btn btn-danger" href="{{ path('delete_entreprise', {'id': entreprise.id})}}">Delete</a><br></li>
        </ul>
    {% endfor %}

