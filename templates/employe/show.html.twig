{% extends 'base.html.twig' %}

{% block title %}Détail d'un employé{% endblock %}

{% block body %}
    <h1>Détail d'un employé</h1>

    <h2>{{ employe }}</h2>
    <p>
        Ville : {{ employe.ville }}<br>

        {# gestion de la date par TWIG #}
        Date de naissance : {{ employe.dateNais | date("d/m/Y") }}<br>
        Date d'embauche : {{ employe.dateEmbauche | date("d/m/Y") }}
    </p>
{% endblock %}